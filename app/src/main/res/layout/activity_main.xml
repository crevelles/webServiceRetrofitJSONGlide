<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:padding="16dp"
    tools:context="com.example.cristobal.webserviceretrofitjsonglide.MainActivity">

    <EditText
        android:id="@+id/etNumPokm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumPokmn"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/etNumPokmn"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvNumPokmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/txtNumPokmn"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNumPokm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/btnConsultar" />

</RelativeLayout>
